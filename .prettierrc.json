{
  "plugins": ["prettier-plugin-packagejson"],
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": true,
  "printWidth": 80,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleAttributePerLine": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.json", "*.jsx", "*.tsx", "studio/schemas/*.js"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "PageModules.tsx",
      "options": {
        "printWidth": 85
      }
    }
  ]
}
